// üìÅ client/src/components/CartSidebar.tsx

import { IconButton, Button, Box, Typography, Card, CardContent } from '@mui/material'; // Th√™m Box, Typography, Card, CardContent
import CloseIcon from '@mui/icons-material/Close';
import AddIcon from '@mui/icons-material/Add';
import RemoveIcon from '@mui/icons-material/Remove';
import DeleteIcon from '@mui/icons-material/Delete';
import { useNavigate } from 'react-router-dom';
import { useCart } from '../context/CartContext'; // ‚ú® D√ôNG CONTEXT

import '../css/CartSidebar.css';

interface CartSidebarProps {
  isOpen: boolean;
  onClose: () => void;
}

export default function CartSidebar({ isOpen, onClose }: CartSidebarProps) {
  const { state, updateQuantity, removeItem } = useCart(); // L·∫•y state v√† h√†m t·ª´ Context
  const navigate = useNavigate();

  const handleUpdateQuantity = (productId: string, newQuantity: number) => {
    // Kh√¥ng c·∫ßn ki·ªÉm tra newQuantity < 0 ·ªü ƒë√¢y n·ªØa v√¨ n√∫t s·∫Ω disabled
    updateQuantity(productId, newQuantity);
  };

  const handleRemoveItem = (productId: string) => {
    if (window.confirm('B·∫°n c√≥ ch·∫Øc mu·ªën xo√° s·∫£n ph·∫©m n√†y kh·ªèi gi·ªè h√†ng?')) {
        removeItem(productId);
    }
  };

  return (
    <>
      <div className={`cart-overlay ${isOpen ? 'open' : ''}`} onClick={onClose}></div>
      <div className={`cart-sidebar ${isOpen ? 'open' : ''}`}>
        <div className="cart-header">
          <h3>Gi·ªè h√†ng ({state.itemCount})</h3>
          <IconButton onClick={onClose}><CloseIcon /></IconButton>
        </div>

        <div className="cart-items">
          {state.items.length === 0 ? (
            <p className="empty-cart-message">Gi·ªè h√†ng c·ªßa b·∫°n ƒëang tr·ªëng.</p>
          ) : (
            state.items.map(item => (
              <div key={item.id} className="cart-item">
                {item.image ? (
                    <img src={item.image} alt={item.name} className="item-image" />
                ) : (
                    <Box sx={{ width: '60px', height: '60px', bgcolor: 'grey.200', display: 'flex', alignItems: 'center', justifyContent: 'center', borderRadius: '8px' }}>
                        <Typography variant="caption" sx={{ fontSize: '0.6rem' }}>No Img</Typography>
                    </Box>
                )}
                <div className="item-details">
                  <div className="item-name">{item.name}</div>
                  <div className="item-price">{(item.price * item.quantity).toLocaleString('vi-VN')} ƒë</div>
                  <div className="quantity-controls">
                    {/* ‚úÖ V√¥ hi·ªáu h√≥a n√∫t n·∫øu s·ªë l∆∞·ª£ng l√† 1 */}
                    <IconButton 
                      onClick={() => handleUpdateQuantity(item.id, item.quantity - 1)}
                      disabled={item.quantity === 1} 
                    >
                      <RemoveIcon fontSize="small" />
                    </IconButton>
                    <span className="quantity-value">{item.quantity}</span>
                    <IconButton onClick={() => handleUpdateQuantity(item.id, item.quantity + 1)}>
                      <AddIcon fontSize="small" />
                    </IconButton>
                  </div>
                </div>
                <div className="item-actions">
                  <IconButton onClick={() => handleRemoveItem(item.id)}>
                    <DeleteIcon fontSize="small" />
                  </IconButton>
                </div>
              </div>
            ))
          )}
        </div>

        <div className="cart-footer">
          <div className="subtotal">
            <span>T·∫°m t√≠nh</span>
            <span className="subtotal-price">{state.total.toLocaleString('vi-VN')} ƒë</span>
          </div>
          <Button
            variant="contained"
            className="checkout-button"
            onClick={() => {
              onClose();
              navigate('/checkout');
            }}
            disabled={state.items.length === 0}
          >
            Thanh to√°n
          </Button>
        </div>
      </div>
    </>
  );
}